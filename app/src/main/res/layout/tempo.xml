<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:background="@color/colorPrimary">



    <LinearLayout
        android:id="@+id/stok_sayim_linear"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#f7f7f7"
        android:elevation="7dp"
        android:layout_margin="10dp"

        android:weightSum="5"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_weight="2">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@color/colorPrimary"
                android:weightSum="2"
                android:orientation="vertical">

                <TextView

                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="#f7f7f7"
                    android:layout_gravity="center"
                    android:text="Stok Kodu"
                    android:textStyle="bold"
                    android:padding="5dp"
                    android:textColor="#000000"
                    android:gravity="center"
                    />

                <TextView
                    android:id="@+id/stok_kodu"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="2dp"
                    android:background="#f7f7f7"
                    android:layout_weight="1"
                    android:layout_gravity="center"
                    android:padding="5dp"
                    android:gravity="center"
                    android:layout_marginBottom="15dp"/>

            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView

                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="2dp"
                    android:layout_weight="1"
                    android:layout_gravity="center"
                    android:text="Stok Miktari"
                    android:textStyle="bold"
                    android:padding="5dp"
                    android:gravity="center"
                    android:textColor="#000000"

                    />

                <TextView
                    android:id="@+id/stok_miktar"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="2dp"
                    android:gravity="center"
                    android:padding="5dp"
                    android:layout_gravity="center"
                    android:text="sayilmadi"
                    android:layout_weight="1"
                    android:layout_marginBottom="15dp"/>

            </LinearLayout>



        </LinearLayout>




    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_weight="2">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:weightSum="2"
            android:orientation="vertical">

            <TextView

                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="2dp"
                android:layout_weight="1"
                android:layout_gravity="center"
                android:text="Stok Isimi"
                android:textStyle="bold"
                android:padding="5dp"
                android:gravity="center"
                android:textColor="#000000"

                />


            <TextView
                android:id="@+id/stok_adi"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="2dp"
                android:gravity="center"
                android:padding="5dp"
                android:layout_gravity="center"
                android:layout_weight="1" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:weightSum="2"
            android:orientation="vertical">

            <TextView
                android:textColor="#000000"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="2dp"
                android:layout_weight="1"
                android:layout_gravity="center"
                android:text="Stok Birimi"
                android:textStyle="bold"
                android:padding="5dp"
                android:gravity="center"
                />

            <TextView

                android:id="@+id/stok_birimi"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="2dp"
                android:layout_gravity="center"
                android:gravity="center"
                android:padding="5dp"
                android:layout_weight="1"/>

        </LinearLayout>

    </LinearLayout>

        <LinearLayout
            android:layout_width="40dp"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_margin="1dp"
            android:gravity="center"
            android:layout_weight="1"
            android:layout_gravity="center">

            <ImageButton
                android:id="@+id/stok_detay_update"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="2dp"
                android:src="@drawable/ic_update_black_24dp"
                android:background="#f7f7f7"/>

            <ImageButton
                android:id="@+id/stok_detay_delete"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="2dp"
                android:src="@drawable/ic_delete_black_24dp"
                android:background="#f7f7f7"/>

        </LinearLayout>

</LinearLayout>


    </LinearLayout>
