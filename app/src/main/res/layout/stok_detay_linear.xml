<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
   >


    <LinearLayout
        android:id="@+id/stok_sayim_linear"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="10dp"
        android:background="@color/colorPrimary"
        android:elevation="7dp"
        android:padding="2dp"
        android:minHeight="125dp"
        android:orientation="horizontal"
        android:weightSum="5">


        <LinearLayout
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:layout_weight="2"
            android:orientation="vertical"
            android:weightSum="2">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginBottom="1dp"
                android:layout_marginLeft="1dp"
                android:layout_marginRight="1dp"
                android:layout_marginTop="1dp"
                android:layout_weight="1"
                android:background="#f7f7f7"
                android:orientation="vertical"
                android:weightSum="3">

                <TextView

                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_gravity="center"
                    android:layout_weight="1.3"
                    android:gravity="center"
                    android:padding="5dp"
                    android:text="Stok Kodu"
                    android:textColor="#000000"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/stok_kodu"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_gravity="center"
                    android:layout_weight="1.7"
                    android:background="#f7f7f7"
                    android:gravity="center"
                    android:padding="5dp"
                    android:textSize="10dp" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginBottom="1dp"
                android:layout_marginLeft="1dp"
                android:layout_marginRight="1dp"
                android:layout_weight="1"
                android:background="#f7f7f7"
                android:orientation="vertical"
                android:weightSum="3">

                <TextView

                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_gravity="center"
                    android:layout_weight="1.3"
                    android:gravity="center"
                    android:padding="5dp"
                    android:text="Stok Miktarı"
                    android:textColor="#000000"
                    android:textStyle="bold"

                    />

                <TextView
                    android:id="@+id/stok_miktar"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_gravity="center"
                    android:layout_weight="1.7"
                    android:gravity="center"
                    android:padding="5dp"
                    android:text="sayilmadi"
                    android:textSize="10dp" />

            </LinearLayout>


        </LinearLayout>


        <LinearLayout
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:layout_weight="2"
            android:orientation="vertical"
            android:weightSum="2">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginBottom="1dp"
                android:layout_marginTop="1dp"
                android:layout_weight="1"
                android:background="#f7f7f7"
                android:orientation="vertical"
                android:weightSum="3">

                <TextView

                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_gravity="center"
                    android:layout_weight="1.3"
                    android:gravity="center"
                    android:padding="5dp"
                    android:text="Stok İsimi"
                    android:textColor="#000000"
                    android:textStyle="bold"

                    />


                <TextView
                    android:id="@+id/stok_adi"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_gravity="center"
                    android:layout_weight="1.7"
                    android:gravity="center"
                    android:padding="5dp"
                    android:textSize="10dp" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginBottom="1dp"
                android:layout_weight="1"
                android:background="#f7f7f7"
                android:orientation="vertical"
                android:weightSum="3">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_gravity="center"
                    android:layout_weight="1.3"
                    android:gravity="center"
                    android:padding="5dp"
                    android:text="Stok Birimi"
                    android:textColor="#000000"
                    android:textStyle="bold" />

                <TextView

                    android:id="@+id/stok_birimi"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_gravity="center"
                    android:layout_weight="1.7"
                    android:gravity="center"
                    android:padding="5dp"
                    android:textSize="10dp" />

            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:layout_margin="1dp"
            android:layout_marginRight="1dp"
            android:layout_weight="1"
            android:background="#f7f7f7"
            android:gravity="center"
            android:orientation="vertical"
            android:weightSum="2">

            <ImageButton
                android:id="@+id/stok_detay_update"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_margin="2dp"
                android:layout_weight="1"
                android:background="#f7f7f7"
                android:src="@drawable/ic_update_black_24dp" />

            <ImageButton
                android:id="@+id/stok_detay_delete"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_margin="2dp"
                android:layout_weight="1"
                android:background="#f7f7f7"
                android:src="@drawable/ic_delete_black_24dp" />

        </LinearLayout>

    </LinearLayout>


</LinearLayout>
