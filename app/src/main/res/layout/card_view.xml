<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"

    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <android.support.v7.widget.CardView
        android:id="@+id/menu_card_view"
        app:cardCornerRadius="15dp"
        style="@style/cardViews">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/holderClick"
            android:gravity="center"
            android:orientation="vertical">


        <ImageView
            android:id="@+id/menu_card_view_image_view"
            android:layout_width="64dp"
            android:layout_height="64dp"
            android:background="@drawable/circlebackgroundgreen"
            android:padding="10dp"
            android:layout_marginBottom="30dp"
            android:src="@drawable/ic_add_black_24dp"
            android:tint="@android:color/white"/>
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/lightgray"
                android:layout_margin="10dp"/>
        <TextView
            style="@style/textView"
            android:id="@+id/menu_card_view_text_view"
            android:text="Cikis"
            android:gravity="center_horizontal"
            android:textColor="#000"
            android:layout_marginTop="10dp"/>


        </LinearLayout>
    </android.support.v7.widget.CardView>


</LinearLayout>
