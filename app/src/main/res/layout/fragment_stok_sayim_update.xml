<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="#f7f7f7"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:minWidth="1000dp"
    android:minHeight="300dp"
    android:orientation="vertical"
    tools:context="com.nejat.evobulut.Fragments.StokSayimFragmnet">

    <TextView
        android:id="@+id/detay_depo_ismi"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Depo Ismi"
        android:gravity="center"
        android:background="@color/colorPrimary"
        android:textColor="#ffffff"
        android:textSize="24dp"
        android:textStyle="bold"
        android:padding="15dp"
        android:layout_margin="7dp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:gravity="center"
        android:layout_marginRight="10dp"
        android:orientation="horizontal"
        android:weightSum="2">

        <TextView
            android:textColor="@color/cardview_dark_background"
            android:layout_width="1dp"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:layout_weight="0.6"
            android:text="Stok Kodu"
            android:textStyle="bold"/>

        <TextView
            android:textColor="@color/cardview_dark_background"
            android:id="@+id/updatedetay_stok_kodu"
            android:layout_width="1dp"
            android:padding="10dp"
            android:layout_height="wrap_content"
            android:background="@drawable/buttonbackground"
            android:layout_weight="1.4"
            android:text="TextView" />

    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:layout_margin="2dp"
        android:orientation="horizontal"
        android:weightSum="2">

        <TextView
            android:textColor="@color/cardview_dark_background"
            android:layout_width="1dp"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:layout_weight="0.6"
            android:text="Stok Ä°smi"
            android:textStyle="bold"/>

        <TextView
            android:textColor="@color/cardview_dark_background"
            android:id="@+id/updatedetay_stok_adi"
            android:layout_width="1dp"
            android:background="@drawable/buttonbackground"
            android:padding="10dp"
            android:layout_height="wrap_content"
            android:layout_marginRight="8dp"
            android:layout_weight="1.4"
            android:text="TextView" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_margin="2dp"
        android:weightSum="2">

        <TextView
            android:textColor="@color/cardview_dark_background"
            android:layout_width="1dp"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:layout_weight="0.6"
            android:text="Eski Miktar"
            android:textStyle="bold"/>

        <TextView
            android:textColor="@color/cardview_dark_background"
            android:id="@+id/detay_update_eski_miktar"
            android:layout_width="1dp"
            android:padding="10dp"
            android:background="@drawable/buttonbackground"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginRight="15dp"
            android:text="TextView" />

        <TextView
            android:id="@+id/update_eski_birimi"
            android:textColor="@color/cardview_dark_background"
            android:layout_width="1dp"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:background="@drawable/buttonbackground"
            android:layout_marginRight="8dp"
            android:layout_weight="0.4"
            android:text="Yeni Miktar"
            />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_margin="2dp"
        android:orientation="horizontal"
        android:weightSum="2">

        <TextView
            android:textColor="@color/cardview_dark_background"
            android:layout_width="1dp"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:layout_weight="0.6"
            android:text="Yeni Miktar"
            android:textStyle="bold"/>




        <EditText
            android:textColor="@color/cardview_dark_background"
            android:id="@+id/detay_update_miktar"
            android:layout_width="1dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="center"
            android:layout_weight="1"
            android:inputType="numberDecimal"
            android:backgroundTint="@color/cardview_dark_background"
            android:hint="miktar girin"/>

        <TextView
            android:id="@+id/update_yeni_birimi"
            android:textColor="@color/cardview_dark_background"
            android:layout_width="1dp"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:layout_weight="0.4"
            android:background="@drawable/buttonbackground"
            android:layout_marginRight="8dp"
            android:text="Yeni Miktar"
            />

    </LinearLayout>
    <Button
        android:id="@+id/detay_update"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Guncelle"
        android:textColor="#ffffff"
        android:layout_margin="7dp"
        android:background="@color/colorPrimary"
        android:layout_gravity="center_horizontal"/>

</LinearLayout>

